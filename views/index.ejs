<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Graph Visualization with D3.js and Neo4j</title>

    <!-- Include D3.js library -->
    <script src="https://d3js.org/d3.v5.min.js"></script>

    <!-- Include NeoVis.js library  -->
    <script src="https://cdn.neo4jlabs.com/neovis.js"></script>

    <!-- Link to JavaScript file -->
    <script src="/js/script"></script>

    <!-- Link to CSS file -->
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- HTML content here -->

    <div id="visualization-container">
        <!-- To render the visualization -->
        <h1>Graph Visualization with D3.js and Neo4j</h1>


        <ul>
            <% neo4jData.forEach(item => { %>
            <li class="list-item">
                <%= item.node1.name %> <%= item.relationship %> <%= item.node2.name %>
            </li>
            <% }); %>
        </ul>
        
        <div id="chart-container" class="container">
            <svg id="chart"></svg>
        </div>
    </div>

    <!-- Provide a noscript message for users without JavaScript -->
    <noscript>
        <p>This page requires JavaScript for optimal functionality. Please enable it in your browser settings.</p>
    </noscript>

    <script id="neo4jDataScript" data-neo4jdata="<%= JSON.stringify(neo4jData) %>"></script>
</body>

</html>
